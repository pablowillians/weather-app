#!/usr/bin/env ruby

require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== Generating RDoc documentation =="
  system! "bundle exec rdoc README.md app/controllers app/helpers app/services"
  system "open ./doc/rdoc/index.html"
end
