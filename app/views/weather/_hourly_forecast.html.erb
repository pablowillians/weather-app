<% if @result.hourly_forecast_entries.any? %>
  <section class="flex flex-col gap-3">
    <div class="flex items-center justify-between px-1">
      <div class="flex items-center gap-2 text-xs font-medium text-zinc-500 uppercase tracking-widest">
        <span class="material-symbols-outlined text-sm">schedule</span>
        Hourly Forecast
      </div>
      <%= weather_source_badge(@result, :hourly_forecast) %>
    </div>

    <div class="grid grid-cols-6 gap-2">
      <% @result.hourly_forecast_entries.each_with_index do |entry, i| %>
        <% is_now = i == 0 %>
        <div class="flex flex-col items-center justify-between gap-3 p-3.5 rounded-2xl transition-colors hover:bg-zinc-800/30 <%= is_now ? 'bg-zinc-900/30 border border-zinc-800/50 backdrop-blur-sm' : 'bg-transparent border border-transparent' %>">
          <span class="text-xs <%= is_now ? 'font-medium text-zinc-100' : 'font-normal text-zinc-500' %>">
            <%= weather_hourly_label(entry, i) %>
          </span>
          <%= weather_condition_icon_tag(entry.weather_condition, size: 28) %>
          <span class="text-base font-normal <%= is_now ? 'text-zinc-100' : 'text-zinc-300' %>">
            <%= entry.temperature_degrees.round.to_s %>Â°
          </span>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
