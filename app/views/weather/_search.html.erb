<div>
  <%= form_with url: weather_search_path, method: :get, local: true do |f| %>
    <span class="material-symbols-outlined absolute left-3.5 top-1/2 -translate-y-1/2 text-zinc-500 text-lg transition-colors group-focus-within:text-zinc-300 pointer-events-none z-10">search</span>
    <%= f.text_field :address,
          value: @address,
          placeholder: "Search address or zip code...",
          class: "w-full bg-zinc-900/40 border border-zinc-800/80 rounded-2xl py-3.5 pl-11 pr-4 text-sm font-normal text-zinc-200 placeholder:text-zinc-600 focus:outline-none focus:border-zinc-700/80 focus:bg-zinc-900/60 transition-all backdrop-blur-sm shadow-sm",
          autofocus: true,
          autocomplete: "off" %>
  <% end %>
</div>
