<section class="flex flex-col gap-4">
  <div class="bg-zinc-900/30 border border-zinc-800/50 rounded-2xl p-5 flex flex-col gap-3 backdrop-blur-sm">
    <div class="flex items-center justify-between">
      <span class="text-xs font-medium text-zinc-500 uppercase tracking-widest flex items-center gap-1.5">
        <span class="material-symbols-outlined text-sm">location_on</span>
        Location
      </span>
      <%= weather_source_badge(@result, :geocode) %>
    </div>
    <div class="flex items-center justify-between">
      <span class="text-sm font-normal text-zinc-300 tracking-tight">
        Latitude, Longitude
      </span>
      <span class="text-xs font-normal text-zinc-500">
        <%= location.latitude %>, <%= location.longitude %>
      </span>
    </div>
    <div class="flex items-center justify-between">
      <span class="text-sm font-normal text-zinc-300 tracking-tight">
        Timezone
      </span>
      <span class="text-xs font-normal text-zinc-500">
        <%= current.time_zone_id %>
      </span>
    </div>
    <% if location.zipcode.present? %>
    <div class="flex items-center justify-between">
      <span class="text-sm font-normal text-zinc-300 tracking-tight">
        Zipcode
      </span>
      <span class="text-xs font-normal text-zinc-500">
        <%= location.zipcode %>
      </span>
    </div>
    <% end %>
  </div>
</section>
